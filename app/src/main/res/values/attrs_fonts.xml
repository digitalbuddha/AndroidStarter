<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TypefaceTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <!-- Changing the attribute must be reflected in the TypefaceManager -->
    <attr name="typeface" format="enum">
        <enum name="edmondsans_regular"     value="0"/>
        <enum name="edmondsans_medium"      value="1"/>
        <enum name="edmondsans_bold"        value="2"/>
        <enum name="quigley"                value="3"/>

    </attr>

</resources>